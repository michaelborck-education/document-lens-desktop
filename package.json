{
  "name": "document-lens-desktop",
  "version": "0.2.16",
  "description": "Cross-platform Electron desktop app for batch PDF analysis. Built for sustainability researchers to analyze corporate reports using TCFD, GRI, SDGs, and SASB framework keywords.",
  "main": "dist-electron/main.js",
  "author": "Michael Borck",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/michaelborck-education/document-lens-desktop.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "npm run build:vite && electron-builder",
    "build:vite": "tsc && vite build",
    "build:mac": "npm run build:vite && electron-builder --mac",
    "build:win": "npm run build:vite && electron-builder --win",
    "build:linux": "npm run build:vite && electron-builder --linux",
    "build:all": "npm run build:vite && electron-builder --mac --win --linux",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src electron --ext .ts,.tsx",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.1.3",
    "@radix-ui/react-dialog": "^1.1.4",
    "@radix-ui/react-dropdown-menu": "^2.1.4",
